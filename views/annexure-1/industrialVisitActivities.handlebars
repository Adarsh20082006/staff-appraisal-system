<h4>Annexure 1</h4><br>
<div class="container">
<h5>Industrial Visit Activities</h5>
<hr>
<div class="row" id="industrialVisitActivities">
    <form action="/annexture-1/industrialVisitActivities" method="post" class="col s12">
        <div class="row">
            <div class="input-field col s6 md5">
                <input id="industrial-visit-role" type="text" name="industrial-visit-role" class="validate" required>
                <label for="industrial-visit-role">Role</label>
            </div>
             <div class="input-field col s6 md5">
                <input id="class_name" type="text" name="class_name" class="validate" required>
                <label for="class_name">Class</label>
            </div>
        </div>

        <div class="row">

            <div class="input-field col s6 md5">
                <select name="department">
                    <option value="" disabled selected>Department</option>
                    <option value="civil">Civil</option>
                    <option value="comp">Computer</option>
                    <option value="it">Information Technology</option>
                    <option value="extc">Electronics and Telecommunication</option>
                    <option value="mech">Mechanical</option>
                   
                </select>
            </div>
            
            <div class="input-field col s6 md5">
                <input id="industrial-visit-days" type="number" name="industrial-visit-days" class="validate" required>
                <label for="industrial-visit-days">No. of Days</label>
            </div>   
            
        </div>
        <div class="row">

           <div class="input-field col s6 md5">
                <select name="industrial-visit-organizer">
                    <option value="" disabled selected>Organized By</option>
                    <option value="IEEE">IEEE</option>
                    <option value="ITSA">ITSA</option>
                    <option value="TPO">TPO</option>
                    <option value="Others">Others</option>
                  
                </select>
            </div>
            
             <div class="input-field col s6 md5">
                <input id="name-of-company" type="text" name="name-of-company" class="validate" required>
                <label for="name-of-company">Name of Company visited</label>
            </div>  
            
        </div>
        <div class="row">
            <div class="input-field col s6 md5">
                <textarea rows="3" cols="20" id="iv-description" name="iv-description" class="validate" required>
                </textarea>
                <label for="iv-description">Description</label>
            </div>
            <div class="input-field col s6 md5">
                <input id="industrial-visit-hrs" type="number" name="industrial-visit-hrs" class="validate" required>
                <label for="industrial-visit-hrs">Duration(hours)</label>
            </div> 


        </div>
        <div class="row">
           
             <div class="input-field col s6 md5">
                <input id="iv-start-date" type="date" name="iv-start-date" class="validate" required>
                <label for="student-event-start-date">Start Date</label>
            </div>
            
            <div class="input-field col s6 md5">
                <input id="iv-end-date" type="date" name="iv-end-date" class="validate" required>
                <label for="student-event-end-date">End Date</label>
            </div>
        </div>
        <button onclick="M.toast({html: 'Industrial Visit Activities contribution added successfully'})" class="btn waves-effect waves-light darken-3" type="submit">Submit
        </button>
    </form>
</div>
</div>