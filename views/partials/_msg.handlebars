{{#if success_msg}}
<div class="row" id="alert_box">
  <div class="col s12 m12">
    <div class="card green lighten-1">
      <div class="row">
        <div class="col s12 m10">
          <div class="card-content white-text">
              {{success_msg}}
        </div>
      </div>
    </div>
   </div>
  </div>
</div>
{{/if}}

{{#if error_msg}}
<div class="row" id="alert_box">
  <div class="col s12 m12">
    <div class="card red lighten-1">
      <div class="row">
        <div class="col s12 m10">
          <div class="card-content white-text">
              {{error_msg}}
        </div>
      </div>
    </div>
   </div>
  </div>
</div>
{{/if}}