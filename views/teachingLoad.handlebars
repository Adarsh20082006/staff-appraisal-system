<h4>1. Academic Performance</h4><br>
<div class="container">
<h5>1.1 Teaching Load</h5>
<hr>
<div class="row" id="leaveform">
    <form action="/teachingLoad" method="post" class="col s12">
        <div class="row">
            <div class="input-field col s6 md5">
                <input id="subject_name" type="text" name="subject_name" class="validate " required>
                <label for="subject_name" class="">Subject Name</label>
            </div>
            <div class="input-field col s6">
                <input id="class" type="text" name="class" class="validate" required>
                <label for="class">Class</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <select name="department">
                    <option value="" disabled selected>Department</option>
                    <option value="Information Technology">Information Technology</option>
                    <option value="Computer Engineering">Computer Engineering</option>
                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                    <option value="Civil Engineering">Civil Engineering</option>
                    <option value="EXTC Engineering">EXTC Engineering</option>
                </select>
            </div>
            <div class="input-field col s6 md5">
                <select name="semester">
                    <option value="" disabled selected>Semester</option>
                    <option value="sem 1">Sem 1</option>
                    <option value="sem 2">Sem 2</option>
                    <option value="sem 3">Sem 3</option>
                    <option value="sem 4">Sem 4</option>
                    <option value="sem 5">Sem 5</option>
                    <option value="sem 6">Sem 6</option>
                    <option value="sem 7">Sem 7</option>
                    <option value="sem 8">Sem 8</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6 md5">
                <input id="theory" type="number" name="theory_subject" class="validate" required>
                <label for="theory">Theory Subjects</label>
            </div>
            <div class="input-field col s6">
                <input id="lab" type="number" name="lab_subject" class="validate" required>
                <label for="lab">Lab Subects</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <input id="tutorials" type="number" name="tutorials" class="validate" required>
                <label for="tutorials">Number of tutorials</label>
            </div>
            <div class="input-field col s6">
                <input id="theory_session" type="number" name="theory_session" class="validate" required>
                <label for="theory_session">Theory session(Hrs/Week)</label>
                
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input id="practical_session" type="number" name="practical_session" class="validate" required>
                <label for="practical_session">Practical session(Hrs/Week)</label>
            </div>
            <div class="input-field col s6">
                <input id="Student_feedback" type="number" name="Student_feedback" class="validate" required>
                <label for="Student_feedback">Student feedback(1-5)</label>
                
            </div>
        </div>
        <button onclick="M.toast({html: 'Subject details added successfully'})" class="btn waves-effect waves-light darken-3" type="submit">Submit
        </button>
    </form>
</div>
</div>